<link rel="stylesheet" href="css/poetry.css">
<section class="poetry-container">
    <% for (let poem of poems) { %>
        <article class="poem">
            <h2 class="poem-title">
                <%= poem.title %>
            </h2>
            <p class="poem-author">by <%= poem.author %>
            </p>
            <div class="poem-content">
                <%= poem.content.replace(/\n/g, '<br>' ) %>
            </div>
        </article>
        <% } %>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Example: Filter poems by author or title
        const searchInput = document.getElementById('searchInput');
        const poems = document.querySelectorAll('.poem');

        searchInput.addEventListener('input', function () {
            const filter = searchInput.value.toLowerCase();
            poems.forEach(poem => {
                const title = poem.querySelector('.poem-title').textContent.toLowerCase();
                const author = poem.querySelector('.poem-author').textContent.toLowerCase();
                if (title.includes(filter) || author.includes(filter)) {
                    poem.style.display = '';
                } else {
                    poem.style.display = 'none';
                }
            });
        });
    });

</script>