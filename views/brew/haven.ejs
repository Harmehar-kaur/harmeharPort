<link rel="stylesheet" type="text/css" href="/assets/css/index.css">
<link rel="stylesheet" type="text/css" href="/assets/css/haven.css">


<div class="dashboard-page-wrapper">

    <section class="about-us">
        <div class="card">
            <div class="card-body container">
                <div class="row align-items-center">
                    <div class="col-8 ">
                        <h5>Wanna Leave a review? We have you covered.</h5>
                        <p>Show your appreciation and love towards Brew Stack.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <% if (locals.user) { %>
    <section class="form-section">
        <form action="/brew-havens/create" class="post-form" method="POST">
            <input name="title" type="text" placeholder="Type the title here..." required>
            <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea>
            <br>
            <input type="submit" value="Post">
        </form>
    </section>
    <% } %>
    <section class="form-section">
        <div id="posts-list-container" class="post-form">
            <ul>
                <% for(review of reviews){ %>
                    
                <%- include('_posts') -%>
                    
                <%} %>
            </ul>
        </div>
    </section>
</div>